---
import Section from "./Section.astro";
const { contactList, developedBy } = Astro.props;
---

<Section>
  <div class="contact-container">
    <div class="links">
      {
        contactList.list.map((item: { link: string; name: string }) => (
          <div class="link">
            <a class="moving-up" href={item.link} target="_blank">
              {item.name}
            </a>
          </div>
        ))
      }
    </div>
    {
      developedBy && (
        <div class="developer-info">
          <span>{developedBy}</span>
        </div>
      )
    }
  </div>
</Section>

<style>
  .contact-container {
    height: 40vh;
    display: flex;
    flex-direction: column;
    margin-top: 7vh;
  }

  .links,
  .developer-info {
    flex: 1;
  }
  .links {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-end;
  }
  .links a {
    text-decoration: none;
    font-size: 3vw;
    color: black;
    font-family: "Monument Extended", sans-serif;
  }
  .developer-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    padding-bottom: 30px;
  }
  .link {
    overflow: hidden;
  }
</style>
