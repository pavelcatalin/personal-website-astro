---
import { contentfulClient } from "../lib/contentful";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Footer from "../components/Footer.astro";
import Contact from "../components/Contact.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Layout.astro";

interface WebsiteData {
  websiteTitle: string;
  developerName: string;
  developerLocation: string;
  projectLinks: string[];
  heroTitle: string[];
  aboutDescription: string[];
  aboutImage: string;
  experinceDetails: string[];
  experienceDescription: string;
  projectsList: { link: string; name: string; techStack: string }[];
  contactList: { link: string; name: string }[];
  developedBy: string;
  footerText: string;
}

const entries = await contentfulClient.getEntries<WebsiteData>({
  content_type: "personalWebsite",
});

const {
  websiteTitle,
  developerName,
  developerLocation,
  heroTitle,
  aboutDescription,
  aboutImage,
  experinceDetails,
  experienceDescription,
  projectsList,
  contactList,
  developedBy,
  footerText,
} = entries.items[0].fields;
---

<Layout title={websiteTitle}>
  <Header developerName={developerName} developerLocation={developerLocation} />
  <Hero heroTitle={heroTitle} />
  <About
    aboutDescription={aboutDescription}
    aboutImage={aboutImage}
    experinceDetails={experinceDetails}
    experienceDescription={experienceDescription}
  />
  <Projects projectsList={projectsList} />
  <Contact contactList={contactList} developedBy={developedBy} />
  <Footer footerText={footerText} />
</Layout>

<script src="../scripts/index.ts"></script>

<style lang="css">
  @media screen and (max-width: 1224px) {
    section {
      width: 90%;
    }
    .description {
      flex: 2;
      padding-right: 0;
    }
    .paragraph {
      font-size: 35px;
    }
  }

  @media screen and (max-width: 768px) {
    .text-container {
      height: 55vh;
    }
    .paragraph {
      bottom: 40px;
      font-size: 4vw;
    }
    .image {
      height: 300px;
      width: 90%;
      right: 0;
    }
    .description-container {
      flex-direction: column;
    }
  }

  @media screen and (max-width: 560px) {
    .info {
      flex: 1;
      min-width: 144px;
    }
    .year {
      margin-left: 20px;
    }
    .info:nth-child(2) {
      justify-content: flex-end;
    }
    .info:nth-child(1)::after,
    .info:nth-child(2)::after {
      display: none;
    }
    .text-container {
      height: 50vh;
    }
    .message-container {
      height: 50vh;
      margin-top: 0;
    }
    .image {
      height: 200px;
      width: 90%;
    }
    .image img {
      right: -180px;
      display: none;
    }
    .paragraph {
      font-size: 19px;
      bottom: 75px;
    }
    .paragraph span {
      display: inline;
    }
    .description-container {
      flex-direction: column;
    }
    .description {
      font-size: 18px;
      line-height: 25px;
      padding: 0;
    }
    .project-description {
      display: inline-flex;
    }
    .type,
    .name,
    .agency {
      display: inline-block;
      padding-right: 20px;
    }
    .projects {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: space-around;
      font-size: 20px;
      margin-top: 10px;
    }
    .project-info {
      flex: 1;
    }
    .project-info a,
    .links a {
      font-size: 4.5vw;
    }
    .moving-up {
      visibility: hidden;
    }
  }
</style>
